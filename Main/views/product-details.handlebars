<section class="product text-center">
  <img src="{{Products.product_url}}" alt="{{Products.product_description}}" height="400" width="400">
  <div class="product-details">
    <h4>{{Products.product_name}}</h4>
    <h5>{{Products.product_description}}</h5>
    <h6>Cost: ${{Products.price}}</h6>

    <form class="product-bought">
      <input type="number" id="product-quantity" placeholder="1"/>
      <button type="submit">ADD</button>
    </form>
  </div>
</section>

<script src="/js/product.js"></script>