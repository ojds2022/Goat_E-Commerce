<section class="product text-center">
  <img src="{{Products.product_url}}" alt="{{Products.product_description}}" height="400" width="400" id="product-image">
  <div class="product-details">
    <h4 id="product-name">{{Products.product_name}}</h4>
    <h5 id="product-description">{{Products.product_description}}</h5>
    {{#if loggedIn}}
    <h6 id="product-price">Cost: ${{Products.price}}</h6>
    <form class="product-bought">
      <input type="number" id="product-quantity" placeholder="1"/>
      <button type="submit">ADD</button>
    </form>
    {{else}}
    <h6 id="product-price">Login to view price</h6>
    {{/if}}
  </div>
</section>

<script src="/js/product.js"></script>