<section class="container">
    <div class="row" style="">
    {{#each Products as |Product| }}
        <div class="col-3 border border-secondary" style="">
            <div class="d-block mt-4 mx-auto" style="width: 90%; height: 220px; overflow: hidden;">
                <a href="/product/{{Product.product_id}}"><img src="{{Product.product_url}}" style="width: 100%;" alt="" /></a>
            </div>
            <p class="ml-3 mb-0 fs-5 text-secondary">{{Product.product_name}}</p>
            <p class="ml-3 fs-6 fw-bold">{{Product.price}}</p>
        </div>
    {{/each}}
    </div>
</section>